{% extends 'admin/layout.html.twig' %}

{% block title %}
    Détail du projet
{% endblock title %}

{% block content %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Détail du projet : {{ projet.nom }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Detail du projet</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <div class="row">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Detail du projet </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Intitulé</th>
                                <th>Descriptif</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>ID</td>
                                <td>{{ projet.id }}</td>
                            </tr>
                            <tr>
                                <td>Nom</td>
                                <td>{{ projet.nom }}</td>
                            </tr>
                            <tr>
                                <td>Description courte</td>
                                <td>{{ projet.description|default('Catégorie sans nom') }}</td>
                            </tr>

                            <tr>
                                <td>Description longue</td>
                                <td>{{ projet.content|nl2br }}</td>
                            </tr>
                            <tr>
                                <td>Site Web</td>
                                <td>{{ projet.website }}</td>
                            </tr>
                            </tbody>
                            <tfoot>
                            </tfoot>

                        </table>
                        <a href="{{ path("admin.project.edit", { id:projet.id }) }}" class="btn btn-primary">Modifier</a>
                        <a href="#" class="btn btn-danger">Supprimer</a>
                        <!-- /.box-body -->
                    </div>

                </div>
                <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


{% endblock content %}