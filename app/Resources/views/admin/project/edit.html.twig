{% extends 'admin/layout.html.twig' %}

{% block title %}
    Modifier un projet
{% endblock title %}

{% block content %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {{ projet.nom }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Projets</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <div class="row">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Editer le projet {{ projet.nom }} </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        {{ form_start(form) }}
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.nom)  }}
                                {{ form_widget(form.nom, {
                                    'attr' : {
                                        'placeholder' : "Nom du projet",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description, 'Résumé')  }}
                                {{ form_widget(form.description, {
                                    'attr' : {
                                        'placeholder' : "Changer la description courte ici...",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.categorie)  }}
                                {{ form_widget(form.categorie, {
                                    'attr' : {
                                        'placeholder' : "Catégorie",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.website, 'Site web')  }}
                                {{ form_widget(form.website, {
                                    'attr' : {
                                        'placeholder' : "Site web",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="col-md-9">
                            <div class="form-group">
                                {{ form_label(form.content, 'Description Longue') }}
                                {{ form_widget(form.content, {
                                    'attr' : {
                                        'placeholder' : "Description longue",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <p class="help-block text-danger"></p>
                        <div class="clearfix"></div>
                        <div class="col-lg-12">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-success btn-xl"><i class="fa fa-check fa-lg"></i> Modifier</button>
                        </div>
                        <p>
                            {{  form_errors(form.nom) }}
                            {{  form_errors(form.description) }}
                            {{  form_errors(form.content) }}
                            {{  form_errors(form.categorie) }}
                        </p>
                        {{ form_end(form) }}

                        <!-- /.box-body -->
                    </div>

                </div>
                <!-- /.row -->
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


{% endblock content %}