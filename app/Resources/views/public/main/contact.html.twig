<!-- Contact Section -->



<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contactez-moi</h2>
                <h3 class="section-subheading text-muted">Pour un projet de site, du conseil en webmarketing ou même parce que ça vous fait plaisir.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <form action="{{ path('homepage') }}" method="post">

                        {{ form_start(form, {
                            'attr' : {
                                'novalidate' : 'novalidate',
                                'name' : "sentMessage",
                                'id' : "contactForm"
                            }
                        }) }}
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_widget(form.name, {
                                    'attr' : {
                                        'placeholder' : "Votre prénom et nom *",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.email, {
                                    'attr' : {
                                        'placeholder' : "Votre email *",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.phone, {
                                    'attr' : {
                                        'placeholder' : "Votre téléphone *",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_widget(form.message, {
                                    'attr' : {
                                        'placeholder' : "Votre message",
                                        'class' : "form-control"
                                    }
                                }) }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <p class="help-block text-danger"></p>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl"><i class="fa fa-check fa-lg"></i> et hop !</button>
                        </div>
                        <p>
                            {{  form_errors(form.name) }}
                            {{  form_errors(form.email) }}
                            {{  form_errors(form.phone) }}
                            {{  form_errors(form.message) }}
                        </p>
                        {{ form_end(form) }}

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
