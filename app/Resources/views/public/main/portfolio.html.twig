<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Portfolio</h2>
                <h3 class="section-subheading text-muted">Quelques réalisations faites par mes petites mains.</h3>
            </div>
        </div>
        <div class="row">

            {% for projet in projets %}
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="#{{ projet.id }}" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="{{ asset('agency/img/portfolio/' ~ projet.image) }}" class="img-responsive img-centered" alt="{{ projet.nom }} - {{ projet.description }}">
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{ projet.nom }}</h4>
                        <h5>{{ projet.categorie }}</h5>
                        <p class="text-muted">{{ projet.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>


<!-- Portfolio Modals -->
<!-- Use the modals below to showcase details about your portfolio projects! -->

<!-- Portfolio Modal -->
{% for projet in projets %}
    <div class="portfolio-modal modal fade" id="{{ projet.id }}" tabindex="-1" role="dialog" aria-hidden="true" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl">
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <img class="img-responsive img-centered" src="{{ asset('agency/img/portfolio/logo/' ~ projet.logoSm) }}" alt="{{ projet.nom }} - {{ projet.description }}">
                                <h2>{{ projet.nom }}</h2>
                                <p class="item-intro text-muted">{{ projet.description }}</p>
                                <ul class="list-inline">
                                    <li>Date : Janvier 2017</li>
                                    <li>Client : {{ projet.nom }}</li>
                                    <li>Categorie: {{ projet.categorie }}</li>
                                </ul>
                                <hr>
                                <p style="text-align:left">{{ projet.content|nl2br }}</p>

                                <p>
                                    <strong>Accéder au site web : </strong>
                                    <br><br>
                                    {% if projet.website|length > 0 %}
                                        <a class="btn btn-primary" target="_blank" href="{{ projet.website }}"><i class="fa fa-bolt"></i> {{ projet.nom }}</a>
                                    {% else %}
                                        Bientôt disponible
                                    {% endif %}
                                </p>
                                <hr>
                                {% if projet.imgPreview|length > 0 %}
                                    <a target="_blank" href="{{ projet.website }}">
                                        <img class="img-responsive img-centered" src="{{ asset('agency/img/portfolio/preview/' ~ projet.imgPreview) }}" alt="{{ projet.nom }} - {{ projet.description }}">
                                    </a>
                                {% else %}
                                    Capture d'écran bienôt disponible
                                    <br>
                                    <img src="{{ asset('agency/img/portfolio/' ~ projet.image) }}" class="img-responsive img-centered" alt="{{ projet.nom }} - {{ projet.description }}">
                                {% endif %}
                                <hr>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> Close Project</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}