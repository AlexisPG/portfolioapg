{% trans_default_domain 'FOSUserBundle' %}

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Page de profile utilisateur</h4>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <img style="width: 100%;" src="{{ asset("admin/dist/img/Photo-APG-carre.png")}}" alt="User Image">
                </div>
                <div class="col-lg-10">
                    <div class="fos_user_user_show">
                        <p>{{ 'profile.show.username'|trans }} : {{ user.username }}</p>
                        <p>{{ 'profile.show.email'|trans }} : {{ user.email }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




