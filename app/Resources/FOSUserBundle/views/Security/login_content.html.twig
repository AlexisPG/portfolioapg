{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Page de login</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-xs-6">
                <div class="well">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="form-group">
                            <label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                            <span class="help-block"></span>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" />
                            <span class="help-block"></span>
                            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublier ?</a>
                        </div>
                        <br>
                        <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </form>
                </div>
            </div>
            <div class="col-xs-6">
                <p class="lead">Cr√©er un compte <span class="text-success">NOW !</span></p>
                <ul class="list-unstyled" style="line-height: 2">
                    <li><span class="fa fa-check text-success"></span> C'est simple</li>
                    <li><span class="fa fa-check text-success"></span> Facile</li>
                    <li><span class="fa fa-check text-success"></span> Sympa</li>
                    <li><span class="fa fa-check text-success"></span> Et surtout gratuit</li>
                </ul>
                <p><a href="{{ path('fos_user_registration_register') }}" class="btn btn-info ">S'enregistrer !</a></p>
            </div>
        </div>
    </div>
</div>
